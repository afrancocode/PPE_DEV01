@model EstimatorApp.WebUI.Models.LoginViewModel
@{
    ViewBag.Title = "Estimator Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    HtmlHelper.ClientValidationEnabled = false;
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="pplogocontainer">
                    <img src="~/Content/Images/pplogo.png" />
                    <img src="~/Content/Images/img-estimator.png" />
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.ValidationSummary()
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label for="Name" class="col-sm-2 control-label">Username</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Name" class="col-sm-2 control-label">Password</label>
                                    <div class="col-sm-10">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <input type="submit" value="Login" class="btbtn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

